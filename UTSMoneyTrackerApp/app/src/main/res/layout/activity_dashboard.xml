<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Salam -->
    <TextView
        android:id="@+id/textNamaUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/roboto_black"
        android:text="Halo, User"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Total Saldo -->
    <TextView
        android:id="@+id/totalSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/roboto_bold"
        android:shadowColor="#66000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="Total Saldo: Rp 0"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        android:textStyle="bold" />

    <!-- Tombol Pemasukan & Pengeluaran -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPemasukan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:layout_height="80dp"
            android:elevation="8dp"
            android:padding="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#4CAF50">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_arrow_upward_white_24dp"
                    android:contentDescription="Pemasukan"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:text="Pemasukan"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPengeluaran"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_height="80dp"
            android:elevation="8dp"
            android:padding="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F44336">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_arrow_downward_white_24dp"
                    android:contentDescription="Pengeluaran"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:text="Pengeluaran"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Title Mutasi -->
    <TextView
        android:text="Mutasi Transaksi"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- RecyclerView untuk mutasi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMutasi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="12dp"
        android:paddingTop="8dp"/>
</LinearLayout>
